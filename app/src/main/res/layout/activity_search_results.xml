<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main1"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hamburger Menu -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:contentDescription="Hamburger Menu"
            app:srcCompat="@drawable/ic_baseline_menu_24"
            app:tint="@color/white" />

        <!-- Logo - Centered -->
        <TextView
            android:id="@+id/SouQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SouQ"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <!-- Sign in + Account -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/signInTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in ›"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/accountImageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Account"
                app:srcCompat="@drawable/ic_baseline_perm_identity_24"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- searchBar -->

    <LinearLayout
        android:id="@+id/searchBarWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:background="@color/main1"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Search Input Field -->
        <EditText
            android:id="@+id/navSearchKeywords"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_rounded_bg"
            android:contentDescription="Search input field"
            android:hint="Search SouQ"
            android:imeOptions="actionSearch"
            android:importantForAccessibility="yes"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#757575" />


        <!-- Search Button -->
        <ImageButton
            android:id="@+id/navSearchSubmit"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext_rounded_bg"
            android:backgroundTint="@color/yellow"
            android:contentDescription="Search button"
            android:src="@drawable/ic_baseline_search_24"
            app:tint="@color/black" />
    </LinearLayout>

        <!-- Product card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Product Flags -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promo !"
                    android:drawableStart="@drawable/etoiles"
                    android:background="@color/red"
                    android:textColor="@color/white"
                    android:padding="2dp"
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-100,00 MAD"
                    android:background="@color/green"
                    android:textColor="@color/white"
                    android:padding="2dp"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Product Image -->
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_product"
                android:contentDescription="Product image"
                android:layout_marginBottom="8dp"/>

            <!-- Product Title -->
            <TextView
                android:id="@+id/productTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kingston SODIMM 32GB 5600 DDR5 CL40"
                android:textSize="16sp"
                android:textColor="@color/main1"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>


            <!-- Price Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 099,00 MAD"
                    android:textSize="18sp"
                    android:textColor="@color/main2"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/productOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 199,00 MAD"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginStart="8dp"
                    android:paintFlags="strike"/>
            </LinearLayout>

            <!-- Availability -->
            <TextView
                android:id="@+id/productAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Produit en stock"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:drawableStart="@drawable/ic_check_circle"
                android:drawablePadding="4dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/productAvailability1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En rupture maintenant"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:drawableStart="@drawable/baseline_access_time_24"
                android:drawablePadding="4dp"
                android:layout_marginBottom="8dp"/>

            <!-- Add to Cart Button -->
            <Button
                android:id="@+id/addToCartButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajouter au panier"
                android:backgroundTint="@color/yellow2"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_add_shopping_cart"
                android:drawablePadding="4dp"/>

            <!-- Quick View Button -->
            <Button
                android:id="@+id/quickViewButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aperçu rapide"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/yellow3"
                android:textColor="@color/black"
                android:drawableStart="@drawable/ic_visibility"
                android:drawablePadding="4dp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"/>




        <!-- Footer Section -->
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Top Links -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOP OF PAGE"
                android:textColor="@color/white"
                android:background="@color/main2"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingBottom="8dp"/>

            <!-- Main Links Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/main1"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SouQ.com"

                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Account"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Main Links Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/main1"
                android:gravity="center"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Lists"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browsing History"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Account Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/black1"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Legal Links -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conditions of Use"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Notice"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consumer Health Data Privacy Disclosure"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SouQ without ads"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>