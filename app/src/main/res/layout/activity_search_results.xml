<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultsActivity">

    <LinearLayout
        android:id="@+id/headerWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main1"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hamburger Menu -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:contentDescription="Hamburger Menu"
            app:srcCompat="@drawable/ic_baseline_menu_24"
            app:tint="@color/white" />

        <!-- Logo - Centered -->
        <TextView
            android:id="@+id/SouQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SouQ"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <!-- Sign in + Account -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/signInTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in â€º"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/accountImageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Account"
                app:srcCompat="@drawable/ic_baseline_perm_identity_24"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- searchBar -->

    <LinearLayout
        android:id="@+id/searchBarWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:background="@color/main1"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Search Input Field -->
        <EditText
            android:id="@+id/navSearchKeywords"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_rounded_bg"
            android:contentDescription="Search input field"
            android:hint="Search SouQ"
            android:imeOptions="actionSearch"
            android:importantForAccessibility="yes"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#757575" />


        <!-- Search Button -->
        <ImageButton
            android:id="@+id/navSearchSubmit"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext_rounded_bg"
            android:backgroundTint="@color/yellow"
            android:contentDescription="Search button"
            android:src="@drawable/ic_baseline_search_24"
            app:tint="@color/black" />
    </LinearLayout>

        <Spinner
            android:id="@+id/planets_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



        <!-- Liste avec refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerWrapper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

