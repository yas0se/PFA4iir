<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main1"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hamburger Menu -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:contentDescription="Hamburger Menu"
            app:srcCompat="@drawable/ic_baseline_menu_24"
            app:tint="@color/white" />

        <!-- Logo - Centered -->
        <TextView
            android:id="@+id/SouQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SouQ"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

        <!-- Sign in + Account -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/signInTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in â€º"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/accountImageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Account"
                app:srcCompat="@drawable/ic_baseline_perm_identity_24"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- searchBar -->

    <LinearLayout
        android:id="@+id/searchBarWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal"
        android:background="@color/main1"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Search Input Field -->
        <EditText
            android:id="@+id/navSearchKeywords"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_rounded_bg"
            android:contentDescription="Search input field"
            android:hint="Search SouQ"
            android:imeOptions="actionSearch"
            android:importantForAccessibility="yes"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#757575" />

        <!-- Clear Button -->

        <!-- Search Button -->
        <ImageButton
            android:id="@+id/navSearchSubmit"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext_rounded_bg"
            android:backgroundTint="@color/yellow"
            android:contentDescription="Search button"
            android:src="@drawable/ic_baseline_search_24"
            app:tint="@color/black" />
    </LinearLayout>


    <!-- Horizontal Scroll View for sliding buttons -->
    <HorizontalScrollView
        android:id="@+id/HorizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/searchBarWrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="none">

        <!-- LinearLayout to hold all the buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/main1"
            android:padding="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Deals -->
            <Button
                android:id="@+id/intlDeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Deals"

                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Amazon Basics -->
            <Button
                android:id="@+id/amazonBasics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Amazon Basics"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Best Sellers -->

            <!-- Livestreams -->
            <Button
                android:id="@+id/bestSellers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Best Sellers"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/livestreams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Livestreams"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Music -->
            <Button
                android:id="@+id/music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Music"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Video -->
            <Button
                android:id="@+id/video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Video"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- New Releases -->
            <Button
                android:id="@+id/newReleases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="New Releases"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Books -->
            <Button
                android:id="@+id/books"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Books"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Home -->
            <Button
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- PC -->
            <Button
                android:id="@+id/pc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="PC"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <include layout="@layout/category_card" />
        <include layout="@layout/category_card" />
        <include layout="@layout/category_card" />
    </LinearLayout>
        <!-- Footer Section -->
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Top Links -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOP OF PAGE"
                android:textColor="@color/white"
                android:background="@color/main2"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingBottom="8dp"/>

            <!-- Main Links Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/main1"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SouQ.com"

                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Account"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Main Links Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/main1"
                android:gravity="center"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Lists"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browsing History"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Account Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/black1"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Legal Links -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conditions of Use"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Notice"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consumer Health Data Privacy Disclosure"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SouQ without ads"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>